<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchViewNoHintIcon" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="InputTextViewHint">
        <item name="android:textColor">@color/dialog_shadow</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
